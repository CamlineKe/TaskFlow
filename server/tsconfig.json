{
  "compilerOptions": {
    /* --- Basic Options --- */
    "target": "ES2020",                       // Compile to a modern version of JavaScript
    "module": "CommonJS",                      // Use the standard module system for Node.js
    "lib": ["ES2020"],                         // Include standard libraries for this JS version

    /* --- Module Resolution --- */
    "moduleResolution": "node",                // How modules get resolved (standard for Node)
    "baseUrl": "./src",                        // Base directory for module resolution (allows for absolute imports from 'src')
    "paths": {                                 // (Optional but recommended) Define path aliases
      "@/api/*": ["api/*"],
      "@/config/*": ["config/*"],
      "@/middleware/*": ["middleware/*"],
      "@/models/*": ["models/*"],
      "@/utils/*": ["utils/*"]
    },

    /* --- Output --- */
    "outDir": "./dist",                        // Where to output the compiled JavaScript files
    "rootDir": "./src",                        // The root directory of your source files

    /* --- Interoperability --- */
    "esModuleInterop": true,                   // Enables compatibility between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true,  // Enforces case-sensitive file naming

    /* --- Strictness & Code Quality --- */
    "strict": true,                            // Enables all strict type-checking options
    "skipLibCheck": true,                      // Skip type checking of declaration files from dependencies
    "noImplicitAny": true,                     // Raise error on expressions and declarations with an implied 'any' type
    "noUnusedLocals": true,                    // Report errors on unused local variables
    "noUnusedParameters": true                 // Report errors on unused parameters
  },
  "include": ["src/**/*"],                     // Which files to include in the compilation
  "exclude": ["node_modules", "dist"]          // Which files/folders to exclude
}
